{
  "compilerOptions": {
    "strict": true,
    "lib": ["DOM", "ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "types": ["vite/client", "mjml-jsx"],
    "noEmit": true,
    "isolatedModules": true
  }
}
